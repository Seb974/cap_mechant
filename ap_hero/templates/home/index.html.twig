{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
	.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
	.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<section class="p-t-30">
	<div class="container">
		<div class="row">
			{% for variant in variants %}
			<div class="col-12 col-sm-6 col-md-4">
				<div class="card card-lg">
					<div class="card-img">
						<a href="#">
							<img src="{{ variant.product.picture.b64 }}" class="card-img-top" alt="{{ variant.product.picture.b64 }}">
						</a>
					</div>
					<div class="card-block">
						<h4 class="card-title">
							<a href="#">{{ variant.product.name }}</a>
						</h4>
						<div class="card-meta">
							<span>{{ variant.name }} - {{ variant.price }}â‚¬</span>
						</div>
						<p class="card-text">{{ variant.product.description }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

{% endblock %}

{% block js %}
{% endblock %}
