{% extends 'base.html.twig' %}

{% block title %}CartItem index{% endblock %}

{% block body %}
    {% set totalPrice, totalTax = 0, 0 %}
    
    <h1>My cart</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Unit price</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart_item in currentCart %}
            {% set priceItem = cart_item.product.price * cart_item.quantity %}
            {% set taxItem = priceItem * cart_item.product.product.tva.taux %}
            <tr>
                <td>{{ cart_item.id }}</td>
                <td>{{ cart_item.product.name }}</td>
                <td>{{ cart_item.product.price }} €</td>
                <td>{{ cart_item.quantity }}</td>
                <td>{{ priceItem }} €</td>
                <td>
                    <a href="{{ path('cart_item_show', {'id': cart_item.id}) }}">Edit</a>
                    {{ include('cart_item/_delete_form.html.twig') }}
                </td>
            </tr>
            {% set totalPrice, totalTax = totalPrice + priceItem, totalTax + taxItem %}
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div><strong>Tva (included): {{ totalTax }} €</strong></div>
    <div><strong>Total to pay : {{ totalPrice }} €</strong></div>
    <a href="{{ path('cart_item_new') }}">Pay</a>
    <br/><br/>
    <a href="{{ path('product_index') }}">back to product list</a>
{% endblock %}
