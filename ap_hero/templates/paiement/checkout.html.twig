{% extends 'base.html.twig' %}

{% block title %}Vérification de votre commande
{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div
            class="row">
            {# Right Panel Block #}
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Ton panier</span>
                    <span class="badge badge-secondary badge-pill">{{ count }}</span>
                </h4>
                <ul class="list-group mb-3">
                    {% for item in cart.cartItems %}
                        {% if item.ispaid == false %}
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">{{ item.quantity }}x
                                        {{ item.product.product.name }}
                                        {{ item.product.name }}</h6>
                                    <small class="text-muted">{{ item.product.product.category.name }}</small>
                                </div>
                                <span class="text-muted">{{ item.product.price }}€</span>
                            </li>
                        {% endif %}
                    {% endfor %}
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (EUR)</span>
                        <strong>{{ cart.totalToPay }}€</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>dont TVA inclue</span>
                        <strong>{{ cart.totalTax }}€</strong>
                    </li>
                    <a href="{{ payment_url }}">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">PAYER</button>
                    </a>
                </ul>
            </div>

            {# Addresses panel #}
            <div class="col-md-8 order-md-1">
                <form class="needs-validation" novalidate="">
                    <div
                        class="row">

                        {# User info #}
                        <div class="col-md-6 mb-3">
                            <label for="firstName">Nom</label>
                            <input type="text" class="form-control" id="firstName" placeholder="{{ user.username }}" value="" required="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                            <div class="invalid-feedback">
                                Un prénom est nécessaire pour la livraison.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email">Email
                            </label>
                            <input type="email" class="form-control" id="email" placeholder="{{ user.email }}">
                            <div class="invalid-feedback">
                                Merci de renseigner un email afin d'être informé de étapes de votre commande.
                            </div>
                        </div>
                    </div>

                    {# Delivery address panel #}
                    <hr class="mb-4">
                    <h4 class="mb-3">Adresse de livraison</h4>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="address">Adresse</label>
                            <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                            <div class="invalid-feedback">
                                Merci de saisir une adresse de livraison.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="zip">CP</label>
                            <input type="text" class="form-control" id="zip" placeholder="" required="">
                            <div class="invalid-feedback">
                                Code Postal nécessaire.
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="address2">Adresse 2
                                <span class="text-muted">(Optionel)</span>
                            </label>
                            <input type="text" class="form-control" id="address2" placeholder="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="state">Ville</label>
                            <select class="custom-select d-block w-100" id="state" required="">
                                <option value="">Choisir...</option>
                                <option>Saint Paul</option>
                                <option>Saint Denis</option>
                            </select>
                            <div class="invalid-feedback">
                                Merci de choisir une ville dans laquelle la livraison est possible.
                            </div>
                        </div>
                    </div>

                    {# Billing address #}
                    <hr class="mb-4">
                    <h4 class="mb-3">Adresse de facturation</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="address">Adresse</label>
                            <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                            <div class="invalid-feedback">
                                Merci de saisir une adresse de livraison.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="zip">CP</label>
                            <input type="text" class="form-control" id="zip" placeholder="" required="">
                            <div class="invalid-feedback">
                                Code Postal nécessaire.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="address2">Adresse 2
                                <span class="text-muted">(Optionel)</span>
                            </label>
                            <input type="text" class="form-control" id="address2" placeholder="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="state">Ville</label>
                            <select class="custom-select d-block w-100" id="state" required="">
                                <option value="">Choisir...</option>
                                <option>Saint Paul</option>
                                <option>Saint Denis</option>
                            </select>
                            <div class="invalid-feedback">
                                Merci de choisir une ville dans laquelle la livraison est possible.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>{% endblock %}
