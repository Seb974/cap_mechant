{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.phone_number) }}
        {{ form_row(registrationForm.delivery_line_1) }}
        {{ form_row(registrationForm.delivery_line_2) }}
        {{ form_row(registrationForm.delivery_city) }}
        {{ form_row(registrationForm.billing_line_1) }}
        {{ form_row(registrationForm.billing_line_2) }}
        {{ form_row(registrationForm.billing_city) }}
        {{ form_row(registrationForm.picture) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
