{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    {% if user.avatar is not null %}
        <img src="{{ asset('uploads/pictures/' ~ user.avatar.b64) }}" height="300" width="400"/>
    {% endif %}
    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse de Facturation</th>
                <th>Adresse de Livraison</th>
            </tr>
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
            {% if user.metadata is not null %}
                <td>{{ user.metadata.facturationAddress }}</td>
                <td>{{ user.metadata.deliveryAddress }}</td>
                <td>{{ user.metadata.phoneNumber }}</td> 
            {% else %}
                <td>None</td>
                <td>None</td>
                <td>None</td>
            {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('self_edit') }}">edit</a>

{% endblock %}
