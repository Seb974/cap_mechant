{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Username</th>
                <th>Adresse de Facturation</th>
                <th>Adresse de Livraison</th>
                <th>Téléphone</th>
                <th>IsBanned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                <td>
                    {% for role in user.roles %}
                        {{ role }} 
                    {% endfor %}
                </td>
                <td>凸(¬◡¬)凸</td>
                <td>{{ user.username }}</td>
                
                {% if user.metadata is not null %}

                    <td>{{ user.metadata.facturationAddress }}</td>
                    <td>{{ user.metadata.deliveryAddress }}</td>
                    <td>{{ user.metadata.phoneNumber }}</td> 

                {% else %}

                    <td>None</td>
                    <td>None</td>
                    <td>None</td>

                {% endif %}

                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
